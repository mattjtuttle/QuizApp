<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Primary header theme. -->
    <style name="PrimaryHeader">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/header1</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Secondary header theme. -->
    <style name="SecondaryHeader">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/header2</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Multi line text theme. -->
    <style name="MultiLineText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/multiline_text</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- ImageView theme. -->
    <style name="ImageView">
        <item name="android:gravity">center</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <!-- Radio button theme. -->
    <style name="RadioButton">
        <item name="android:padding">8dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <!-- CheckBox theme. -->
    <style name="CheckBox">
        <item name="android:padding">8dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <!-- EditText theme. -->
    <style name="EditText">
        <item name="android:padding">8dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">textCapWords</item>
    </style>

    <!-- Button theme. -->
    <style name="Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/background</item>
        <item name="android:layout_margin">16dp</item>
    </style>

</resources>
